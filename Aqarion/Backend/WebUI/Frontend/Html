<script src="https://unpkg.com/three@0.160.0/build/three.min.js"></script>
<script src="https://unpkg.com/three@0.160.0/examples/js/controls/OrbitControls.js"></script>
<script>
  const API_BASE = "http://localhost:8000";

  const sceneContainer = document.getElementById("scene");
  const tabEls = Array.from(document.querySelectorAll(".tab"));
  const nodeTitle = document.getElementById("node-title");
  const nodeMeta = document.getElementById("node-meta");
  const mStatus = document.getElementById("m-status");
  const mLayer = document.getElementById("m-layer");
  const mPower = document.getElementById("m-power");
  const mBackend = document.getElementById("m-backend");
  const mPos = document.getElementById("m-pos");
  const mId = document.getElementById("m-id");
  const logBody = document.getElementById("log-body");
  const refreshBtn = document.getElementById("refresh-btn");
  const vrToggleBtn = document.getElementById("vr-toggle");

  const scene = new THREE.Scene();
  scene.background = new THREE.Color(0x040509);

  const camera = new THREE.PerspectiveCamera(
    50,
    sceneContainer.clientWidth / sceneContainer.clientHeight,
    0.1,
    200
  );
  camera.position.set(0, 7, 14);

  const renderer = new THREE.WebGLRenderer({ antialias: true });
  renderer.setSize(sceneContainer.clientWidth, sceneContainer.clientHeight);
  renderer.setPixelRatio(window.devicePixelRatio || 1);
  sceneContainer.appendChild(renderer.domElement);

  const controls = new THREE.OrbitControls(camera, renderer.domElement);
  controls.enableDamping = true;
  controls.dampingFactor = 0.08;
  controls.minDistance = 3;
  controls.maxDistance = 40;

  const ambient = new THREE.AmbientLight(0xffffff, 0.35);
  scene.add(ambient);
  const keyLight = new THREE.DirectionalLight(0xffffff, 0.85);
  keyLight.position.set(8, 12, 6);
  scene.add(keyLight);
  const rimLight = new THREE.DirectionalLight(0x4b8bff, 0.45);
  rimLight.position.set(-6, 3, -8);
  scene.add(rimLight);

  const grid = new THREE.GridHelper(40, 40, 0x252642, 0x252642);
  grid.position.y = -2;
  scene.add(grid);

  const nodeMeshes = new Map();
  const linkMeshes = [];
  let lastNodes = [];
  let currentLayerFilter = "all";

  const layerColors = {
    matter: 0xff5555,
    signals: 0xffc857,
    brains: 0x4b8bff,
    governance: 0x9b59b6,
  };

  function addLog(msg) {
    const el = document.createElement("div");
    el.className = "log-line";
    const now = new Date();
    const t = now.toLocaleTimeString();
    el.innerHTML = `<strong>${t}</strong> ${msg}`;
    logBody.prepend(el);
    const children = logBody.children;
    if (children.length > 80) {
      logBody.removeChild(children[children.length - 1]);
    }
  }

  function createNodeMesh(node) {
    const baseColor = layerColors[node.layer] || 0xffffff;
    const geom = new THREE.SphereGeometry(0.35, 32, 32);
    const mat = new THREE.MeshStandardMaterial({
      color: baseColor,
      emissive: baseColor,
      emissiveIntensity: 0.28,
      metalness: 0.55,
      roughness: 0.35
    });
    const mesh = new THREE.Mesh(geom, mat);
    mesh.position.set(node.x, node.y, node.z);
    mesh.userData.node = node;
    scene.add(mesh);

    const haloGeom = new THREE.RingGeometry(0.45, 0.5, 32);
    const haloMat = new THREE.MeshBasicMaterial({
      color: baseColor,
      transparent: true,
      opacity: 0.4,
      side: THREE.DoubleSide
    });
    const halo = new THREE.Mesh(haloGeom, haloMat);
    halo.rotation.x = -Math.PI / 2;
    halo.position.set(node.x, node.y - 0.35, node.z);
    mesh.userData.halo = halo;
    scene.add(halo);

    return mesh;
  }

  function createLinkMesh(link, nodesById) {
    const a = nodesById.get(link.source);
    const b = nodesById.get(link.target);
    if (!a || !b) return null;
    const start = new THREE.Vector3(a.x, a.y, a.z);
    const end = new THREE.Vector3(b.x, b.y, b.z);
    const points = [start, end];
    const geom = new THREE.BufferGeometry().setFromPoints(points);

    let color = 0x888888;
    if (link.channel === "optical") color = 0xffcc88;
    else if (link.channel === "acoustic") color = 0x88cfff;
    else if (link.channel === "ionic") color = 0x44ff88;
    else if (link.channel === "fiber") color = 0x4b8bff;
    else if (link.channel === "policy") color = 0xffffff;

    const mat = new THREE.LineDashedMaterial({
      color,
      dashSize: 0.15,
      gapSize: 0.12,
      linewidth: 1
    });
    const line = new THREE.Line(geom, mat);
    line.computeLineDistances();
    scene.add(line);
    return line;
  }

  async function loadGraph() {
    try {
      const [nodesRes, linksRes] = await Promise.all([
        fetch(`${API_BASE}/api/nodes`),
        fetch(`${API_BASE}/api/links`)
      ]);
      const nodes = await nodesRes.json();
      const links = await linksRes.json();
      lastNodes = nodes;
      addLog(`Graph updated: ${nodes.length} nodes, ${links.length} links.`);

      nodeMeshes.forEach((mesh) => {
        scene.remove(mesh);
        if (mesh.userData.halo) scene.remove(mesh.userData.halo);
      });
      nodeMeshes.clear();
      linkMeshes.forEach((line) => scene.remove(line));
      linkMeshes.length = 0;

      const nodesById = new Map(nodes.map(n => [n.id, n]));

      for (const n of nodes) {
        const mesh = createNodeMesh(n);
        nodeMeshes.set(n.id, mesh);
      }
      for (const l of links) {
        const line = createLinkMesh(l, nodesById);
        if (line) linkMeshes.push(line);
      }

      applyLayerFilter();
    } catch (err) {
      console.error(err);
      addLog("Error loading graph.");
    }
  }

  function applyLayerFilter() {
    nodeMeshes.forEach((mesh) => {
      const node = mesh.userData.node;
      const visible = (currentLayerFilter === "all" || node.layer === currentLayerFilter);
      mesh.visible = visible;
      if (mesh.userData.halo) mesh.userData.halo.visible = visible;
    });
  }

  function updateNodeDetail(node) {
    nodeTitle.textContent = node.name;
    nodeMeta.textContent = `Layer: ${node.layer} • Channel brain: ${node.backend ?? "none"}`;
    mStatus.textContent = node.status;
    mLayer.textContent = node.layer;
    mPower.textContent = node.power.toFixed(2);
    mBackend.textContent = node.backend ?? "—";
    mPos.textContent = `${node.x.toFixed(1)}, ${node.y.toFixed(1)}, ${node.z.toFixed(1)}`;
    mId.textContent = node.id;
  }

  const raycaster = new THREE.Raycaster();
  const pointer = new THREE.Vector2();

  function onTap(event) {
    const rect = renderer.domElement.getBoundingClientRect();
    let x, y;
    if (event.touches && event.touches.length > 0) {
      x = event.touches[0].clientX;
      y = event.touches[0].clientY;
    } else {
      x = event.clientX;
      y = event.clientY;
    }
    pointer.x = ((x - rect.left) / rect.width) * 2 - 1;
    pointer.y = -((y - rect.top) / rect.height) * 2 + 1;

    raycaster.setFromCamera(pointer, camera);
    const intersects = raycaster.intersectObjects(Array.from(nodeMeshes.values()));
    if (intersects.length > 0) {
      const mesh = intersects[0].object;
      const node = mesh.userData.node;
      updateNodeDetail(node);
      addLog(`Selected node ${node.id} (${node.layer}).`);
    }
  }

  renderer.domElement.addEventListener("click", onTap);
  renderer.domElement.addEventListener("touchstart", onTap, { passive: true });

  window.addEventListener("resize", () => {
    camera.aspect = sceneContainer.clientWidth / sceneContainer.clientHeight;
    camera.updateProjectionMatrix();
    renderer.setSize(sceneContainer.clientWidth, sceneContainer.clientHeight);
  });

  tabEls.forEach((tab) => {
    tab.addEventListener("click", () => {
      tabEls.forEach(t => t.classList.remove("active"));
      tab.classList.add("active");
      currentLayerFilter = tab.dataset.layer;
      applyLayerFilter();
      addLog(`Layer filter: ${currentLayerFilter}`);
    });
  });

  refreshBtn.addEventListener("click", () => {
    loadGraph();
  });

  vrToggleBtn.addEventListener("click", () => {
    addLog("XR toggle pressed (hook this into WebXR / Cardboard later).");
    alert("XR stub: integrate WebXR or Cardboard mode in JS here.");
  });

  function animate() {
    requestAnimationFrame(animate);
    controls.update();
    renderer.render(scene, camera);
  }

  loadGraph();
  animate();
</script>
</body>
</html>
```

This is a single robust HTML file:

- 3D node map with layers and channels.  
- Mobile‑responsive layout.  
- Side panel with live node details and log.  
- XR button stub to attach WebXR/Cardboard when you want.[1][2][4]

